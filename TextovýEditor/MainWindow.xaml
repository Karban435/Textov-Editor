<Window x:Class="TextovýEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextovýEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF7BA1BF"/>
                <GradientStop Color="#FF34A3A5" Offset="0.783"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Otevřít .txt" x:Name="btnwrite" HorizontalAlignment="Left"  Margin="595,126,0,0" VerticalAlignment="Top" Height="30" Width="75" Click="btnwrite_Click"/>
        <Button Content="Přidat" HorizontalAlignment="Left" x:Name="pridat" Margin="600,190,0,0" VerticalAlignment="Top" Height="27" Width="70" Click="Button_Click_2"/>
        <TextBlock HorizontalAlignment="Left" x:Name="textvystup" Margin="44,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="318" Width="230" Background="White"/>
        <TextBox HorizontalAlignment="Left" x:Name="textvstup" Margin="351,100,0,0" TextWrapping="Wrap" Text="Přidaný Text" VerticalAlignment="Top" Width="177" Height="82"/>
        
    </Grid>
</Window>
